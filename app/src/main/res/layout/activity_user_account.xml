<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PatientAccountActivity">

    <View
        android:id="@+id/idEditUserAccountView"
        android:layout_width="342dp"
        android:layout_height="76dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="34dp"
        android:layout_marginTop="308dp"
        android:layout_marginEnd="35dp"
        android:background="#00000000"
        android:onClick="displayOption"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtEditUserAccountOption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginBottom="2dp"
        android:text="@string/txtEditUserAccountOption"
        android:textColor="#222222"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/txtEditUser"
        app:layout_constraintStart_toEndOf="@+id/imageEditUser"
        app:layout_constraintTop_toBottomOf="@+id/idCreateNewUserAccountView"
        app:layout_constraintVertical_bias="0.807" />

    <TextView
        android:id="@+id/idAdminUserActionsHomePage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginStart="173dp"
        android:layout_marginTop="33dp"
        android:layout_marginEnd="180dp"
        android:gravity="center"
        android:text="@string/txtAdminUserAccountView"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RelativeLayout
        android:id="@+id/ios_bottom_"
        android:layout_width="411dp"
        android:layout_height="84dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="193dp"
        android:layout_marginEnd="194dp"
        android:layout_marginBottom="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">


        <ImageView
            android:id="@+id/imageViewHome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:contentDescription="@string/imgHomeNavBar"
            android:focusableInTouchMode="true"
            app:srcCompat="@drawable/home_24"
            app:tint="#C4C4C4" />
    </RelativeLayout>

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="119dp"
        android:layout_marginTop="136dp"
        android:layout_marginEnd="119dp"
        android:layout_marginBottom="572dp"
        android:gravity="center_horizontal|top"
        android:text="@string/txtSelectAnAction"
        android:textColor="#7378AA"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/ios_bottom_"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.058" />

    <View
        android:id="@+id/idCreateNewUserAccountView"
        android:layout_width="342dp"
        android:layout_height="76dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="34dp"
        android:layout_marginTop="196dp"
        android:layout_marginEnd="35dp"
        android:background="#00000000"
        android:onClick="displayOption"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageCreateUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="312dp"
        android:layout_marginBottom="14dp"
        android:contentDescription="@string/imagePlus"
        app:layout_constraintBottom_toBottomOf="@+id/idCreateNewUserAccountView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/idCreateNewUserAccountView"
        app:layout_constraintTop_toTopOf="@+id/idCreateNewUserAccountView"
        app:srcCompat="@drawable/plusicon" />

    <TextView
        android:id="@+id/txtCreateNewUserOption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="@string/txtCreateNewUserAccountOption"
        android:textColor="#222222"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/idCreateNewUserAccountView"
        app:layout_constraintStart_toEndOf="@+id/imageCreateUser"
        app:layout_constraintTop_toTopOf="@+id/idCreateNewUserAccountView"
        app:layout_constraintVertical_bias="0.21" />

    <TextView
        android:id="@+id/txtAddUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="@string/txtAddNewUSer"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/idCreateNewUserAccountView"
        app:layout_constraintStart_toEndOf="@+id/imageCreateUser"
        app:layout_constraintTop_toTopOf="@+id/txtCreateNewUserOption"
        app:layout_constraintVertical_bias="0.695" />

    <TextView
        android:id="@+id/txtEditUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginBottom="12dp"
        android:text="@string/txtEditUser"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/idEditUserAccountView"
        app:layout_constraintStart_toEndOf="@+id/imageEditUser" />

    <View
        android:id="@+id/divider"
        android:layout_width="342dp"
        android:layout_height="1dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/idCreateNewUserAccountView" />

    <View
        android:id="@+id/divider3"
        android:layout_width="342dp"
        android:layout_height="1dp"
        android:layout_marginTop="19dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <ImageView
        android:id="@+id/imageEditUser"
        android:layout_width="52dp"
        android:layout_height="51dp"
        android:contentDescription="@string/imagePencil"
        app:layout_constraintBottom_toBottomOf="@+id/idEditUserAccountView"
        app:layout_constraintEnd_toEndOf="@+id/idEditUserAccountView"
        app:layout_constraintHorizontal_bias="0.027"
        app:layout_constraintStart_toStartOf="@+id/idEditUserAccountView"
        app:layout_constraintTop_toTopOf="@+id/idEditUserAccountView"
        app:layout_constraintVertical_bias="0.517"
        app:srcCompat="@drawable/pencilicon" />

    <View
        android:id="@+id/divider4"
        android:layout_width="342dp"
        android:layout_height="1dp"
        android:layout_marginStart="35dp"
        android:layout_marginTop="392dp"
        android:layout_marginEnd="34dp"
        android:layout_marginBottom="252dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintBottom_toBottomOf="@+id/ios_bottom_"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

</androidx.constraintlayout.widget.ConstraintLayout>